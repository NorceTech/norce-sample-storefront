@using  Model.Commerce.Product
@model IProductList
 <!--page header-->
<div class="page-breadcrumb margin-b-60">
    <div class="container">
        <h4>Shop 4 columns</h4>
    </div>
</div>
<!--page header-->
<div class="container">
    <div class="clearfix margin-b-30">
        <div class="pull-right">
            <a href="#" class="btn btn-primary btn-lg"><i class="fa fa-th"></i> Grid</a>
            <a href="#" class="btn btn-default btn-lg"><i class="fa fa-list"></i> List</a>
        </div>
        <div class="pull-left">
            <a class="btn btn-dark btn-lg" role="button" data-toggle="collapse" href="#filter-collapse" aria-expanded="false" aria-controls="filter-collapse">
                <i class="fa fa-filter"></i>  Filter
            </a>
        </div>
    </div>

    <div class="clearfix"></div>
   
<div class="container">

    <div class="row">
        <div class="col-sm-12">
            <div id="products">
                <div class="row">
                    @foreach( var product in Model.Products ) { 
                        <div class="col-sm-6 col-md-3" style="height: 400px;">
                            <div class="product-box">
                                <div class="product-thumb" style="width: 250px; height: 250px;">
                                    <img src="@product.PrimaryImageUrl?w=250&h=250" alt="" class="img-responsive">
                                    <div class="product-overlay">
                                        <span>
                                            <a class="btn btn-default" href="/Product/Show/@product.PrimaryVariant.Url">View Detail</a>
                                            <a class="btn btn-primary" href="#" onclick="cart.addToCart('@product.PrimaryVariant.PartNo',1)">Add to cart</a>
                                        </span>
                                    </div>
                                </div><!--/product-thumb-->
                                <div class="product-desc">
                                    <span class="product-price pull-right">@(product.PrimaryVariant.Price*product.PrimaryVariant.VatRate)</span>
                                    <h5 class="product-name"><a href="#">@product.Name</a></h5>
                                </div><!--/product-desc-->
                            </div>
                        </div>
                        }
                </div>

                <div class="space-30"></div>
            </div>

        </div>
    </div>
</div>
    </div>


@section scripts {
}
